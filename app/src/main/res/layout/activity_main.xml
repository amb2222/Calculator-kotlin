<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="73pt"
    android:orientation="vertical"
    android:paddingTop="10pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#655E5E"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="20pt"
        android:shadowColor="#FFFFFF"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="54sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buac"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonDelete"
                android:text="AC"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bupm"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="+/-"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bupercent"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonPercent"
                android:text="%"
                android:textSize="19sp" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="#FFAC07"
                android:onClick="buttonOp"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <Button
                android:id="@+id/bu7"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="7"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="8"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="9"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bumult"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="#FFAC07"
                android:onClick="buttonOp"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="4"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="5"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="6"
                android:textSize="19sp" />

            <Button
                android:id="@+id/busub"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="#FFAC07"
                android:onClick="buttonOp"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="1"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="2"
                android:textSize="19sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buttonCLick"
                android:text="3"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buadd"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="#FFAC07"
                android:onClick="buttonOp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="70pt"
            android:layout_height="35pt"
            android:layout_marginRight="1pt"
            android:layout_weight="2"
            android:background="#D6D6D6"
            android:onClick="buttonCLick"
            android:text="0"
            android:textSize="19sp" />

        <Button
            android:id="@+id/budot"
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:onClick="buttonCLick"
            android:text="."
            android:textSize="19sp" />

        <Button
            android:id="@+id/buequal"
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_weight="1"
            android:background="#FFAC07"
            android:onClick="buttonEqual"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="19sp" />
    </LinearLayout>
</LinearLayout>